<% include header %>

      <div class="col-me-12">
        
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">爱情文章</h3>
          </div>
          <div class="panel-body">
            
              <ul class="list-group">
                <li class="list-group-item">

                  <!-- <h4>分类:<%= articles.itemId%></h4> -->
                  <h4>文章标题:<%= articles.title %></h4>
                  <h4>文章作者:<%= articles.author %></h4>
                  <h4>关键字:<%= articles.keywords %></h4>
                  <h4 style="width: 100px; height: 80px;
                  display: block; overflow: hidden;s">封面<img style="width: 100px; height: 80px;" src="/<%= articles.imgurl %>" alt=""></h4>
                  <h4>文章描述:<%= articles.description %></h4>
                  <p>上传日期:<%= articles.ctime.toLocaleString()%></p>
                  <p>
                    文章内容:<%- articles.content %>
                  </p>
                 
                </li>
              </ul>
             
            
          </div>
        </div>
      </div>

<% include footer %>